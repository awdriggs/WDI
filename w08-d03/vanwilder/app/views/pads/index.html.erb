
<h1>Listing pads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bro Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pads.each do |pad| %>
      <tr>
        <td><%= pad.name %></td>
        <td><%= pad.bro_id %></td>
        <td><%= link_to 'Click here', pad_path(pad.id) %></td>
        <td><%= link_to 'Edit', edit_pad_path(pad) %></td>
        <td><%= link_to 'Destroy', pad, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'new pad', new_pad_path %>














