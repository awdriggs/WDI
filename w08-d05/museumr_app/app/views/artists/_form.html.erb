<%= form_for @artist do |f| %>

	<%= f.label :name %><br>
	<%= f.text_field :name %><br><br>

	<%= f.label :img_url %><br>
	<%= f.text_field :img_url %><br><br>

	<%= f.label :description %><br>
	<%= f.text_field :description %><br><br>

	<%= f.label :birth_year %><br>
	<%= f.text_field :birth_year %><br><br>

	<%= f.label :nationality %><br>
	<%= f.text_field :nationality %><br><br>

	<%= f.submit %>

<% end %>

<br>
<br>

<% if edit %>
	<%= form_for @artist, method: 'delete' do |f| %>
		<%= f.submit "Delete Artist" %>
	<% end %>
<% end %>