<h1>Customers</h1>
<a href="/new-customer">New Customer</a>
<table>

	<tr>
		<th>name</th>
		<th>email</th>
		<th>edit</th>
		<th>delete</th>
	</tr>

	{{#each everything}}
	<tr>
		<td><a href='/customers/{{this.id}}'>{{this.name}}</a></td>
		<td>{{this.email}}</td>
		<td><a href='/edit-customer/{{id}}'>edit</a></td>
		<td>delete</td>
	</tr>
	{{/each}}
</table>
	
</table>